{{ form_start(address_form, { 'attr': { 'id': 'address-form' }}) }}

<div class="nameAndFirst">
    <div class="form_item">
        {{ form_label(address_form.lastName)}}
        {{ form_widget(address_form.lastName)}}
    </div>
    <div class="form_item secondItem">
        {{ form_label(address_form.firstName)}}
        {{ form_widget(address_form.firstName)}}
    </div>
</div>

<div class="form_item">
    {{ form_label(address_form.address)}}
    {{ form_widget(address_form.address)}}
</div>

<div class="form_item">
    {{ form_label(address_form.addressComplement)}}
    {{ form_widget(address_form.addressComplement)}}
</div>

<div class="form_item">
    {{ form_label(address_form.city)}}
    {{ form_widget(address_form.city)}}
</div>

<div class="form_item">
    {{ form_label(address_form.postCode)}}
    {{ form_widget(address_form.postCode)}}
</div>

<div class="form_item">
    {{ form_label(address_form.country)}}
    {{ form_widget(address_form.country)}}
</div>

<div class="form_item">
    {{ form_label(address_form.phoneNumber)}}
    {{ form_widget(address_form.phoneNumber)}}
</div>
{# TODO ADD BOUTON FONCTIONNEL#}
<div class="panier_space flexStart add_adressUpdate">
    <div class="fullCenter button pop">
        <a class="add_adress" href="#">+ Ajouter cette adresse</a>
    </div>
</div>
{{ form_end(address_form) }}

